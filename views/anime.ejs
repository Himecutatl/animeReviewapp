    <table>
      <thead>
        <tr>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% reviewList.forEach(function(r) { %>
         
          <tr>
            <td><%= r.review %></td>
            <td><%= r.rating %></td>
            <td><form method ="POST" action="/details/<%= r._id %>?_method=DELETE">
              <input type="hidden" name='base64' value="<%= base64 %>"/>
              <button type="submit">Delete</button></form></td>
            
          <td> <form method="POST" action="/details/<%= r._id %>?_method=PUT">

            <label>Review:</label>
          <input name="review" type="text">
          <label>Rating:</label>
          <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>

          <input type="hidden" name='base64' value="<%= base64 %>"/>
            <input type="submit" value="Edit Review">
          </form>
        </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
   

