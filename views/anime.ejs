<section id="show-page">
  <div>
  <div >Title: </div>
  <div><%= anime.title %></div>
  <div>Preview: </div>
  <div><img src=<%= anime.image_url %> ></div>
  <div>Episodes: </div>
  <div><%= anime.episodes %></div>
  <div>Start Date: </div>
  <div><%= anime.start_date %></div>
